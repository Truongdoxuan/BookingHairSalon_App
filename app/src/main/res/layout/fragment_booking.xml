<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Booking_Fragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lịch hẹn"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt_tenKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập họ và tên"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="phone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn dịch vụ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner_services"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ngày"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/tv_selected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:hint="Nhấn để chọn ngày"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:backgroundTint="@color/purple_200"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn giờ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/tv_selected_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:hint="Nhấn để chọn giờ"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:backgroundTint="@color/purple_200"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thêm ghi chú (tuỳ chọn)"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:gravity="top" />

        <Button
            android:id="@+id/btn_confirm_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận đặt lịch"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Làm mới"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
